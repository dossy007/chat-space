  .chat__left
    = render "chat__left_user"
    = render "chat__left_group"
  .chat__right
    .chat__right_group
      %ul
        .chat__right_group_button  edit
        %li.chat__right_group_name techcamp
        %li.chat__right_group_current_user membername :ddd
